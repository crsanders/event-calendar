        <%= "Unavailable" if @user.saturday_start.to_i > @user.saturday_end.to_i %>
        <%= @user.saturday_start unless @user.saturday_start.to_i > @user.saturday_end.to_i %>
        <%= @user.saturday_end unless @user.saturday_start.to_i > @user.saturday_end.to_i %>
        <br />
      </p>
    </section>
  </aside>
</div>