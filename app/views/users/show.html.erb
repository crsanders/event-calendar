<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <br />
      <br />
      <br />
      <p>
        Sunday:
        <br />
        <%= "Unavailable" if @user.sunday_start.to_i > @user.sunday_end.to_i %>
        <%= @user.sunday_start unless @user.sunday_start.to_i > @user.sunday_end.to_i %>
        <%= @user.sunday_end unless @user.sunday_start.to_i > @user.sunday_end.to_i %>
        <br />
        Monday:
        <br />
        <%= "Unavailable" if @user.monday_start.to_i > @user.monday_end.to_i %>
        <%= @user.monday_start unless @user.monday_start.to_i > @user.monday_end.to_i %>
        <%= @user.monday_end unless @user.monday_start.to_i > @user.monday_end.to_i %>
        <br />
        Tuesday:
        <br />
        <%= "Unavailable" if @user.tuesday_start.to_i > @user.tuesday_end.to_i %>
        <%= @user.tuesday_start unless @user.tuesday_start.to_i > @user.tuesday_end.to_i %>
        <%= @user.tuesday_end unless @user.tuesday_start.to_i > @user.tuesday_end.to_i %>
        <br />
        Wednesday:
        <br />
        <%= "Unavailable" if @user.wednesday_start.to_i > @user.wednesday_end.to_i %>
        <%= @user.wednesday_start unless @user.wednesday_start.to_i > @user.wednesday_end.to_i %>
        <%= @user.wednesday_end unless @user.wednesday_start.to_i > @user.wednesday_end.to_i %>
        <br />
        Thursday:
        <br />
        <%= "Unavailable" if @user.thursday_start.to_i > @user.thursday_end.to_i %>
        <%= @user.thursday_start unless @user.thursday_start.to_i > @user.thursday_end.to_i %>
